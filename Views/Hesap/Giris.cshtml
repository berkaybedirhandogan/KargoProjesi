@model KargoTakibi.Models.Kullanici

@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --input-focus-border: #667eea;
    }

    body {
        background-color: #f3f4f6;
    }

    .auth-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        background: #fff;
        overflow: hidden;
    }

    .auth-header {
        background: var(--primary-gradient);
        padding: 3rem 1.5rem;
        text-align: center;
        color: white;
        position: relative;
    }

        .auth-header::before, .auth-header::after {
            content: '';
            position: absolute;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            z-index: 0;
        }

        .auth-header::before {
            top: -100px;
            left: -50px;
        }

        .auth-header::after {
            bottom: -100px;
            right: -50px;
        }

        .auth-header h3 {
            position: relative;
            z-index: 1;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    .form-group-custom {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .form-control-custom {
        height: 55px;
        padding-left: 45px;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        background-color: #f8fafc;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .form-control-custom:focus {
            background-color: #fff;
            border-color: var(--input-focus-border);
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 38px;
        font-size: 1.2rem;
        color: #a0aec0;
        transition: color 0.3s;
        z-index: 5;
    }

    .form-control-custom:focus ~ .input-icon,
    .form-group-custom:focus-within .input-icon {
        color: #667eea;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: #4a5568;
        margin-bottom: 0.5rem;
        margin-left: 5px;
    }

    .btn-auth {
        background: var(--primary-gradient);
        border: none;
        height: 50px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: 0.5px;
        transition: transform 0.2s, box-shadow 0.2s;
        color: white;
    }

        .btn-auth:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .auth-link {
        color: #667eea;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }

        .auth-link:hover {
            color: #764ba2;
            text-decoration: underline;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">

            <div class="auth-card">
                <div class="auth-header">
                    <h3>Hoş Geldiniz</h3>
                    <p class="mb-0 opacity-75 small">Hesabınıza giriş yapın.</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Giris" method="post">

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger small rounded-3 border-0 bg-danger bg-opacity-10 text-danger mb-4">
                                <i class="bi bi-exclamation-circle me-1"></i> E-posta veya şifre hatalı.
                            </div>
                        }

                        <div class="form-group-custom">
                            <label asp-for="Email" class="form-label">Email Adresi</label>
                            <input asp-for="Email" class="form-control form-control-custom" placeholder="ornek@email.com" />
                            <i class="bi bi-envelope input-icon"></i>
                            <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="form-group-custom">
                            <label asp-for="Sifre" class="form-label">Şifre</label>
                            <input asp-for="Sifre" class="form-control form-control-custom" type="password" placeholder="******" />
                            <i class="bi bi-lock input-icon"></i>
                            <span asp-validation-for="Sifre" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4 mb-3">
                            <button type="submit" class="btn btn-auth">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Giriş Yap
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4 pt-3 border-top">
                        <p class="text-muted small mb-0">Hesabınız yok mu?</p>
                        <a asp-action="Kayit" class="auth-link">Hemen Kayıt Ol</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}