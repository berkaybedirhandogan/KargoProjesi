@model KargoTakibi.Models.Kargo

@{
    ViewData["Title"] = "Kargo Düzenle";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --secondary-bg: #f8fafc;
        --border-color: #e2e8f0;
    }

    body {
        background-color: #f3f4f6;
    }

    .main-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        background: white;
        overflow: hidden;
    }

    .card-header-custom {
        background: var(--primary-gradient);
        padding: 2rem;
        color: white;
        position: relative;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #4a5568;
        border-bottom: 2px solid #edf2f7;
        padding-bottom: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

        .section-title i {
            background: #fff5f5;
            color: #e53e3e; 
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            margin-right: 10px;
            font-size: 1rem;
        }

    /* Gönderici için özel ikon rengi */
    .section-sender i {
        background: #e0e7ff;
        color: #667eea;
    }
    /* Alýcý için özel ikon rengi */
    .section-receiver i {
        background: #d1fae5;
        color: #059669;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: #718096;
        margin-bottom: 0.5rem;
    }

    .form-control-custom {
        border: 1px solid var(--border-color);
        background-color: var(--secondary-bg);
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .form-control-custom:focus {
            background-color: white;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

    .btn-update {
        background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(217, 119, 6, 0.4);
            color: white;
        }

    .status-box {
        background-color: #fffbeb;
        border: 1px solid #fcd34d;
        color: #92400e;
        border-radius: 10px;
        padding: 15px;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <form asp-action="Duzenle">
                <input type="hidden" asp-for="KargoID" />
                <input type="hidden" asp-for="KullaniciID" />
                <input type="hidden" asp-for="Durum" />

                <div class="main-card">
                    <div class="card-header-custom">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                                <i class="bi bi-pencil-square fs-3"></i>
                            </div>
                            <div>
                                <h3 class="mb-1 fw-bold">Kargo Düzenle</h3>
                                <p class="mb-0 opacity-75 small">
                                    <span class="badge bg-white text-primary me-2">ID: #@Model.KargoID</span>
                                    kargosunun bilgilerini güncelliyorsunuz.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 border-0 bg-danger bg-opacity-10 text-danger mb-4"></div>

                        <div class="status-box mb-4">
                            <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                            <div>
                                <strong>Mevcut Durum:</strong> @Model.Durum
                                <span class="d-block small text-muted mt-1">Durum güncellemesi yapmak için "Hareket Ekle" menüsünü kullanýnýz.</span>
                            </div>
                        </div>

                        <div class="row g-5">
                            <div class="col-md-6">
                                <div class="section-title section-sender">
                                    <i class="bi bi-person-up"></i>
                                    Gönderici Bilgileri
                                </div>

                                <div class="mb-3">
                                    <label asp-for="GondericiAd" class="form-label">Ad Soyad / Firma</label>
                                    <input asp-for="GondericiAd" class="form-control form-control-custom" />
                                    <span asp-validation-for="GondericiAd" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label asp-for="GondericiIl" class="form-label">Ýl</label>
                                        <input asp-for="GondericiIl" class="form-control form-control-custom" />
                                        <span asp-validation-for="GondericiIl" class="text-danger small"></span>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label asp-for="GondericiIlce" class="form-label">Ýlçe</label>
                                        <input asp-for="GondericiIlce" class="form-control form-control-custom" />
                                        <span asp-validation-for="GondericiIlce" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="GondericiTelefonu" class="form-label">Telefon</label>
                                    <input asp-for="GondericiTelefonu" class="form-control form-control-custom" />
                                    <span asp-validation-for="GondericiTelefonu" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="GondericiAdresi" class="form-label">Açýk Adres</label>
                                    <textarea asp-for="GondericiAdresi" class="form-control form-control-custom" rows="3"></textarea>
                                    <span asp-validation-for="GondericiAdresi" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="section-title section-receiver">
                                    <i class="bi bi-person-down"></i>
                                    Alýcý Bilgileri
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AliciAd" class="form-label">Ad Soyad / Firma</label>
                                    <input asp-for="AliciAd" class="form-control form-control-custom" />
                                    <span asp-validation-for="AliciAd" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label asp-for="AliciIl" class="form-label">Ýl</label>
                                        <input asp-for="AliciIl" class="form-control form-control-custom" />
                                        <span asp-validation-for="AliciIl" class="text-danger small"></span>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label asp-for="AliciIlce" class="form-label">Ýlçe</label>
                                        <input asp-for="AliciIlce" class="form-control form-control-custom" />
                                        <span asp-validation-for="AliciIlce" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AliciTelefonu" class="form-label">Telefon</label>
                                    <input asp-for="AliciTelefonu" class="form-control form-control-custom" />
                                    <span asp-validation-for="AliciTelefonu" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AliciAdresi" class="form-label">Açýk Adres</label>
                                    <textarea asp-for="AliciAdresi" class="form-control form-control-custom" rows="3"></textarea>
                                    <span asp-validation-for="AliciAdresi" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-4 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-light" style="background: #edf2f7; color: #4a5568;">
                                Ýptal
                            </a>
                            <button type="submit" class="btn btn-update">
                                <i class="bi bi-check2-circle me-1"></i> Deðiþiklikleri Kaydet
                            </button>
                        </div>

                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}